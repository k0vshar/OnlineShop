@model List<ProductViewModel>

@{
    ViewData["Title"] = "Главная";
}

@if (Model != null)
{
    <section class="featured-products px-lg-3">
        <div class="container">
            <div class="row mb-2">
                <div class="col-12">
                    <h2 class="section-title">
                        <span>Рекомендуемые товары</span>
                    </h2>
                </div>
            </div>
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
                    <div class="product-card">
                        <div class="product-card-offer">
                            <div class="offer-hit">Hit</div>
                            <div class="offer-new">New</div>
                        </div>
                        <div class="product-thumb">
                            <a asp-controller="Product" asp-action="Index" asp-route-productid="@product.Id"><img src="@product.ImagesPath[0].URL" alt="@product.Name"></a>
                        </div>
                        <div class="product-details">
                            <h4>
                                <a asp-controller="Product" asp-action="Index" asp-route-productid="@product.Id">@product.Name</a>
                            </h4>
                            <p class="product-excerpt">@product.Description</p>
                            <div class="product-bottom-details d-flex justify-content-between">
                                <div class="product-price">@product.Cost</div>
                                <div class="product-links">
                                    <a asp-controller="Cart" asp-action="Add" asp-route-productid="@product.Id" class="btn btn-outline-secondary add-to-cart">
                                        <i class="fa-solid fa-cart-shopping"></i></a>
                                </div>
                                <div class="product-links">
                                    <a asp-controller="Compare" asp-action="Add" asp-route-productid="@product.Id" class="btn btn-outline-secondary add-to-cart">
                                        <i class="fa-solid fa-code-compare"></i>
                                    </a>
                                </div>
                                <div class="product-links">
                                    <a asp-controller="Favourite" asp-action="Add" asp-route-productid="@product.Id" class="btn btn-outline-secondary add-to-cart">
                                        <i class="fa-solid fa-star"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </section>

    <section class="about-us">
        <div class="container">
            <div class="row mb-2">
                <div class="col-12">
                    <h2 class="section-title">
                        <span>О нас</span>
                    </h2>
                </div>
            </div>

            <div class="row text">
                <div class="col-12">
                    <p>
                        Интернет-магазин товаров для животных с широким ассортиментом кормов, аксессуаров,
                        игрушек и средств ухода для питомцев. Удобный поиск, быстрая доставка и всё необходимое
                        для здоровья и комфорта вашего любимца.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d1274.0911988675923!2d2.387783374877228!3d48.89919914701243!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1suk!2sfr!4v1748203742893!5m2!1suk!2sfr" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
}

